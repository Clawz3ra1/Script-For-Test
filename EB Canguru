-- UI + Lógica do sistema dos "cangurus até mil"
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local uis = game:GetService("UserInputService")
local runService = game:GetService("RunService")

-- UI Setup
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "CanguruGui"
screenGui.ResetOnSpawn = false

local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 200, 0, 130)
frame.Position = UDim2.new(0.5, -100, 0.5, -65)
frame.BackgroundColor3 = Color3.fromRGB(60, 60, 90)
frame.BackgroundTransparency = 0.1
frame.BorderSizePixel = 0
frame.ClipsDescendants = true
frame.Active = true
frame.Draggable = true
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.SizeConstraint = Enum.SizeConstraint.RelativeXY
frame.BackgroundTransparency = 0.05
frame:TweenSize(UDim2.new(0, 200, 0, 130), "Out", "Quad", 0.3)

local uicorner = Instance.new("UICorner", frame)
uicorner.CornerRadius = UDim.new(0, 12)

local startBtn = Instance.new("TextButton", frame)
startBtn.Size = UDim2.new(0.8, 0, 0.3, 0)
startBtn.Position = UDim2.new(0.1, 0, 0.2, 0)
startBtn.Text = "Começar Cangurus"
startBtn.BackgroundColor3 = Color3.fromRGB(40, 120, 90)
startBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", startBtn).CornerRadius = UDim.new(0, 10)

local stopBtn = Instance.new("TextButton", frame)
stopBtn.Size = UDim2.new(0.8, 0, 0.3, 0)
stopBtn.Position = UDim2.new(0.1, 0, 0.6, 0)
stopBtn.Text = "Parar Cangurus"
stopBtn.BackgroundColor3 = Color3.fromRGB(160, 50, 50)
stopBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", stopBtn).CornerRadius = UDim.new(0, 10)

-- Variáveis de controle
local executando = false

-- Função para converter número em texto (simplificada até 1000)
local function numeroPorExtenso(n)
	local unidades = { [0]="zero", "um", "dois", "três", "quatro", "cinco", "seis", "sete", "oito", "nove" }
	local especiais = { "dez", "onze", "doze", "treze", "quatorze", "quinze", "dezesseis", "dezessete", "dezoito", "dezenove" }
	local dezenas = { "", "", "vinte", "trinta", "quarenta", "cinquenta", "sessenta", "setenta", "oitenta", "noventa" }
	local centenas = { "", "cento", "duzentos", "trezentos", "quatrocentos", "quinhentos", "seiscentos", "setecentos", "oitocentos", "novecentos" }

	if n == 100 then return "cem" end
	if n == 1000 then return "mil" end

	local c = math.floor(n / 100)
	local d = math.floor((n % 100) / 10)
	local u = n % 10

	local resultado = ""

	if c > 0 then
		resultado = centenas[c]
	end

	if d == 1 then
		resultado = resultado ~= "" and resultado .. " e " or ""
		resultado = resultado .. especiais[u + 1]
	elseif d > 1 then
		resultado = resultado ~= "" and resultado .. " e " or ""
		resultado = resultado .. dezenas[d]
		if u > 0 then
			resultado = resultado .. " e " .. unidades[u]
		end
	elseif u > 0 or n == 0 then
		resultado = resultado ~= "" and resultado .. " e " or ""
		resultado = resultado .. unidades[u]
	end

	return resultado
end

-- Ação de Canguru
local function fazerCangurus()
	executando = true
	for i = 0, 1000 do
		if not executando then break end

		-- Envia mensagem no chat
		local mensagem = numeroPorExtenso(i):upper() .. "!"
		game.ReplicatedStorage:WaitForChild("DefaultChatSystemChatEvents")
			:WaitForChild("SayMessageRequest"):FireServer(mensagem, "All")

		-- Pressiona 'C' duas vezes
		uis.InputBegan:Fire({KeyCode = Enum.KeyCode.C, UserInputType = Enum.UserInputType.Keyboard})
		wait(0.1)
		uis.InputBegan:Fire({KeyCode = Enum.KeyCode.C, UserInputType = Enum.UserInputType.Keyboard})

		-- Faz um 360 com shift lock
		local root = character:FindFirstChild("HumanoidRootPart")
		if root then
			local angulo = 0
			local passo = math.pi / 16
			while angulo < 2 * math.pi do
				root.CFrame = root.CFrame * CFrame.Angles(0, passo, 0)
				angulo = angulo + passo
				task.wait()
			end
		end

		task.wait(0.3) -- intervalo entre ações
	end
end

-- Conectar botões
startBtn.MouseButton1Click:Connect(function()
	if not executando then
		coroutine.wrap(fazerCangurus)()
	end
end)

stopBtn.MouseButton1Click:Connect(function()
	executando = false
end)
